@model myapp.Models.Contactos

@{
    ViewData["Title"] = "Contacto";  
}
<link rel="stylesheet" href="~/css/Carrito.css" asp-append-version="true" />
 <link rel="stylesheet" href="~/css/Footer.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/css/Tablas.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/css/Edicion.css" asp-append-version="true" />

<h1>Consultas</h1>
<style>
   
    label{
        color: white;
        padding: 5px;
    }
    input:focus{
        border-color: #8a2be2 !important;
        box-shadow: 0 0 5px #8a2be2 !important;
    }

</style>

<div class="container">
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" readonly />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" readonly />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Consulta" class="control-label"></label>
                <textarea asp-for="Consulta" class="form-control area" rows="5" readonly> </textarea>
                <span asp-validation-for="Consulta" class="text-danger"></span>
            </div>
    </form>

    </div>
</div>
<div class="border"></div>