@model IEnumerable<myapp.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.prod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.categ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prec_final)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imgProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.categ)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prec_final)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imgProd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
